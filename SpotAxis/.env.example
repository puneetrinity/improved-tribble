# Django Settings
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_HOSTS=*
TIME_ZONE=Asia/Kolkata

# Subdomain Enforcement (Railway/Platform deployment)
# Set to 1 to disable subdomain enforcement on non-standard domains
# Required for Railway, Heroku, or other platforms with their own domain structure
DISABLE_SUBDOMAIN_ENFORCEMENT=1

# Database Configuration
db_engine=django.db.backends.postgresql
db_name=spotaxis
db_user=postgres
db_password=your-database-password
db_host=postgres.railway.internal
db_port=5432

# Optional: Session Configuration
session_cookie_domain=.your-domain.com

# Media & Static Files
media_root=/app/media
media_url=https://your-spotaxis-domain.railway.app/media/
static_root=/app/static

# Server Configuration
PORT=8000
